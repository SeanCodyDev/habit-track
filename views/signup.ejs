<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>

</head>
<body>

<% include includes/navbar.ejs %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in-alt"></span> Signup</h1>

            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>

                    <!-- LOGIN FORM -->
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>

                        <button type="submit" class="btn btn-warning btn-block btn-lg">Signup</button>
                        <a href="/auth/facebook" class="btn btn-lg btn-block btn-primary"><span class="fab fa-facebook"></span> Facebook</a>
                        <a href="/auth/twitter" class="btn btn-lg btn-block btn-info"><span class="fab fa-twitter"></span> Twitter</a>
                        <a href="/auth/google" class="btn btn-lg btn-block btn-danger"><span class="fab fa-google-plus"></span> Google+</a>
                    </form>


                    <hr>



        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <p>Need an account? <a href="/login">Login</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
</div>
</body>
</html>
